pipeline {
    agent any

    environment {
        DOCKER_HUB = "krsaikrishna"
        APP_NAME = "ci-cd-demo"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/krsaikrishna/ci-cd-demo.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'npm install'
                sh 'npm test'
            }
        }

        stage('Docker Build & Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                sh """
                    docker login -u $DOCKER_USER -p $DOCKER_PASS
                    docker build -t $DOCKER_USER/ci-cd-demo:${BUILD_NUMBER} .
                    docker push $DOCKER_USER/ci-cd-demo:${BUILD_NUMBER}
                """
               }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withEnv(["KUBECONFIG=/var/lib/jenkins/.kube/config"]) {
                    sh 'kubectl set image deployment/ci-cd-demo ci-cd-demo=krsaikrishna/ci-cd-demo:${BUILD_NUMBER}'
               }
            }
        }
    }
}

